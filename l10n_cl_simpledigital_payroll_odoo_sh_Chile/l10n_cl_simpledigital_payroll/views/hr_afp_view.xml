<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Formulario -->
        <record id="hr_afp_form" model="ir.ui.view">
            <field name="name">hr.afp.form</field>
            <field name="model">hr.afp</field>
            <field name="arch" type="xml">
                <form string="AFP">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group col="2">
                            <field name="codigo"/>
                            <field name="rut"/>
                            <field name="rate"/>
                            <field name="sis"/>
                            <field name="independiente"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista árbol opcional -->
        <record id="hr_afp_tree" model="ir.ui.view">
            <field name="name">hr.afp.tree</field>
            <field name="model">hr.afp</field>
            <field name="arch" type="xml">
                <tree string="AFP">
                    <field name="name"/>
                    <field name="codigo"/>
                    <field name="rate"/>
                    <field name="sis"/>
                    <field name="independiente"/>
                </tree>
            </field>
        </record>

        <!-- Acción -->
        <record id="hr_afp_action" model="ir.actions.act_window">
            <field name="name">Fondos de Pensión</field>
            <field name="res_model">hr.afp</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menú -->
        <menuitem id="menu_hr_afp" name="Fondos de Pensión"
                  parent="menu_cl_hr_payroll_configuration"
                  action="hr_afp_action"
                  sequence="14"/>
    </data>
</odoo>
