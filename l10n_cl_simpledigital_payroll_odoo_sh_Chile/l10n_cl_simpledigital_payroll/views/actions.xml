<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Acción: Exportador Previred -->
    <record id="action_wizard_export_csv_previred_tree_view" model="ir.actions.act_window">
        <field name="name">Exportador Previred</field>
        <field name="res_model">wizard.export.csv.previred</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Acción: Libro de Remuneraciones -->
    <record id="action_report_hrsalarybymonth" model="ir.actions.act_window">
        <field name="name">Libro de Remuneraciones</field>
        <field name="res_model">hr.payslip</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Acción: Reporte de Nómina -->
    <record id="action_report_hr_payslip" model="ir.actions.report">
        <field name="name">Nómina</field>
        <field name="model">hr.payslip</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hr_payroll.report_payslip</field>
        <field name="report_file">hr_payroll.report_payslip</field>
    </record>

    <!-- Acción: Centralización contable -->
    <record id="account_centralized_export_action" model="ir.actions.act_window">
        <field name="name">Centralización contable</field>
        <field name="res_model">account.centralized.export</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Acción: Lotes de Nómina -->
    <record id="action_hr_payslip_run_tree" model="ir.actions.act_window" module="l10n_cl_simpledigital_payroll">
        <field name="name">Lotes de Nómina</field>
        <field name="res_model">hr.payslip.run</field>
        <field name="view_mode">tree,form</field>
    </record>


</odoo>
