<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Vista formulario -->
        <record id="hr_isapre_form" model="ir.ui.view">
            <field name="name">hr.isapre.form</field>
            <field name="model">hr.isapre</field>
            <field name="arch" type="xml">
                <form string="Isapre">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group col="2">
                            <field name="codigo"/>
                            <field name="rut"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista árbol -->
        <record id="hr_isapre_tree" model="ir.ui.view">
            <field name="name">hr.isapre.tree</field>
            <field name="model">hr.isapre</field>
            <field name="arch" type="xml">
                <tree string="Isapres">
                    <field name="name"/>
                    <field name="codigo"/>
                    <field name="rut"/>
                </tree>
            </field>
        </record>

        <!-- Acción -->
        <record id="hr_isapre_action" model="ir.actions.act_window">
            <field name="name">Isapres</field>
            <field name="res_model">hr.isapre</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menú -->
        <menuitem id="menu_hr_isapre"
                  name="Isapres"
                  parent="menu_cl_hr_payroll_configuration"
                  action="hr_isapre_action"
                  sequence="15"/>
    </data>
</odoo>
