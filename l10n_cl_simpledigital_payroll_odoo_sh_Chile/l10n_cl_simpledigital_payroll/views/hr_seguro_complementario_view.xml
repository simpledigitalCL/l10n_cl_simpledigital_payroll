<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Vista formulario -->
        <record id="hr_seguro_complementario_form" model="ir.ui.view">
            <field name="name">hr.seguro.complementario.form</field>
            <field name="model">hr.seguro.complementario</field>
            <field name="arch" type="xml">
                <form string="Seguro Complementario">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group col="2">
                            <field name="codigo"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista árbol -->
        <record id="hr_seguro_complementario_tree" model="ir.ui.view">
            <field name="name">hr.seguro.complementario.tree</field>
            <field name="model">hr.seguro.complementario</field>
            <field name="arch" type="xml">
                <tree string="Seguros Complementarios">
                    <field name="name"/>
                    <field name="codigo"/>
                </tree>
            </field>
        </record>

        <!-- Acción -->
        <record id="hr_seguro_complementario_action" model="ir.actions.act_window">
            <field name="name">Seguros Complementarios</field>
            <field name="res_model">hr.seguro.complementario</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menú -->
        <menuitem id="menu_hr_seguro_complementario"
                  name="Seguros Complementarios"
                  parent="menu_cl_hr_payroll_configuration"
                  action="hr_seguro_complementario_action"
                  sequence="18"/>
    </data>
</odoo>
