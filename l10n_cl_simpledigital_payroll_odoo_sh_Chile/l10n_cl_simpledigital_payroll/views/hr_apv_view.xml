<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Vista formulario -->
        <record id="hr_apv_form" model="ir.ui.view">
            <field name="name">hr.apv.form</field>
            <field name="model">hr.apv</field>
            <field name="arch" type="xml">
                <form string="Instituciones APV / APVC">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group col="2">
                            <field name="codigo"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista árbol -->
        <record id="hr_apv_tree" model="ir.ui.view">
            <field name="name">hr.apv.tree</field>
            <field name="model">hr.apv</field>
            <field name="arch" type="xml">
                <tree string="Instituciones APV / APVC">
                    <field name="name"/>
                    <field name="codigo"/>
                </tree>
            </field>
        </record>

        <!-- Acción -->
        <record id="hr_apv_action" model="ir.actions.act_window">
            <field name="name">Instituciones APV / APVC</field>
            <field name="res_model">hr.apv</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menú -->
        <menuitem id="menu_hr_apv"
                  name="Instituciones APV / APVC"
                  parent="menu_cl_hr_payroll_configuration"
                  action="hr_apv_action"
                  sequence="17"/>
    </data>
</odoo>
