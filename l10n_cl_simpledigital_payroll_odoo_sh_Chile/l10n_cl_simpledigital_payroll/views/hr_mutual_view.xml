<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Vista formulario -->
        <record id="hr_mutual_form" model="ir.ui.view">
            <field name="name">hr.mutual.form</field>
            <field name="model">hr.mutual</field>
            <field name="arch" type="xml">
                <form string="Mutualidad">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group col="2">
                            <field name="codigo"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista árbol -->
        <record id="hr_mutual_tree" model="ir.ui.view">
            <field name="name">hr.mutual.tree</field>
            <field name="model">hr.mutual</field>
            <field name="arch" type="xml">
                <tree string="Mutualidades">
                    <field name="name"/>
                    <field name="codigo"/>
                </tree>
            </field>
        </record>

        <!-- Acción -->
        <record id="hr_mutual_action" model="ir.actions.act_window">
            <field name="name">Mutualidades</field>
            <field name="res_model">hr.mutual</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menú -->
        <menuitem id="menu_hr_mutual"
                  name="Mutualidades"
                  parent="menu_cl_hr_payroll_configuration"
                  action="hr_mutual_action"
                  sequence="19"/>
    </data>
</odoo>
